{% extends '::base.html.twig' %}
{% block body %}

<div class="jumbotron text-center">
  <h1>SIGIE</h1> 
  <h2>Sistema de Gestión de Instrumentos de Evaluación</h2> 
</div>

<div class="container">
	<div class="row">
		<div class="col-sm-3"><br></div>
		<div class="col-sm-6">
			
			<div class="contentbox createquiz">
				<h2>Ingresa al Sistema</h2>
				{% if error %}
				    <div><em>{{ error|trans({}, 'FOSUserBundle') }}</em></div>
				{% endif %}

				<form action="{{ path("fos_user_security_check") }}" method="post">
				    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

				    <div class="form-group">
				    	<label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
				    	<input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
				    </div>

				    <div class="form-group">
					    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
					    <input class="form-control" type="password" id="password" name="_password" required="required" />
					</div>

					<input type="hidden" name="_target_path" value="seleccion" />
					<input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />

			    	<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
			    	<label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
			    	<br/>
			    	<a href="{{ path('fos_user_resetting_request')}}">¿Olvidé mi contraseña?</a>

				</form>
			</div>
		</div>
		<div class="col-sm-3"><br></div>
	</div>
</div>
{% endblock %}
