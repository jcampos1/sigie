<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <h1><small>RECUPERACIÓN DE CONTRASEÑA</small></h1>
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div>
                {% if invalid_username is defined %}
                    <div class="alert alert-danger">
                    <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
                    </div>
                {% endif %}
                <label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label>
                <div class="form-group">
                    <input class="form-control" type="text" id="username" name="username" required="required" />
                </div>
            </div>
            <div class="form-group text-center">
                <input type="submit" class="btn btn-primary" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />
            </div>
        </form>
    </div>
    <div class="col-sm-3"></div>
</div>
