{% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
        <div class="alert alert-success text-center {{ type }}">
            {{ message|trans({}, 'FOSUserBundle') }}
        </div>
    {% endfor %}
{% endfor %}
<form action="{{ path('fos_user_profile_show') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
	<div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_errors(form.name) }}
                {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': 'Nombre'} }) }}
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                {{ form_label(form.lastName) }}
                {{ form_errors(form.lastName) }}
                {{ form_widget(form.lastName, { 'attr': {'class': 'form-control', 'placeholder': 'Apellido'} }) }}
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                {{ form_label(form.ci) }}
                {{ form_errors(form.ci) }}
                {{ form_widget(form.ci, { 'attr': {'class': 'form-control', 'placeholder': 'Cédula'} }) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                {{ form_label(form.username) }}
                {{ form_errors(form.username) }}
                {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Cédula'} }) }}
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Nombre'} }) }}
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
                {{ form_label(form.phone) }}
                {{ form_errors(form.phone) }}
                {{ form_widget(form.phone, { 'attr': {'class': 'form-control', 'placeholder': 'Teléfono'} }) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                {{ form_label(form.current_password) }}
                {{ form_errors(form.current_password) }}
                {{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'Nombre'} }) }}
            </div>
        </div>
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">
        </div>
    </div>
    {{ form_rest(form)}}
    <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
    <button type="button"  class="btn btn-danger"><span class="glyphicon glyphicon-eye-close"></span><a  style='text-decoration:none;color:white;' href="{{ path('seleccion') }}"> Cancelar </a></button>
</form>
