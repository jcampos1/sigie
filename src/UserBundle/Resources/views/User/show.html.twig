{% extends '::base2.html.twig' %}

{% block body -%}
    <h1><small>USUARIO</small></h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ entity.lastName }}</td>
            </tr>
            <tr>
                <th>Cédula</th>
                <td>{{ entity.ci }}</td>
            </tr>
            <tr>
                <th>Teléfono</th>
                <td>{{ entity.phone }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
        </tbody>
    </table>
    <div id="control">
        <ul class="record_actions list-inline">
            <button type="button"  class="btn btn-success"><span class="glyphicon glyphicon-eye-close"></span><a  style='text-decoration:none;color:white;' href="{{ path('user') }}"> Regresar </a></button>

            <li>
                {{ form_start(delete_form, { "attr": { "id": "myForm" }}) }}
                    <button type="submit" class="btn btn-danger" id="eliminar"> 
                        <span class="glyphicon glyphicon-remove"></span> Eliminar
                    </button>

                    <div style="display: none">
                        {{ form_rest(delete_form) }}
                    </div>    
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
<br/>
<br/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/funciones.js') }}"></script>
{% endblock javascripts %}
