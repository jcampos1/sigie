{% extends '::base2.html.twig' %}
{% block title %}Subtemas{% endblock %}
{% block body -%}
    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <div class="alert alert-success text-center">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <h1><small>LISTA  DE SUBTEMAS</small></h1>
    <div class="text-right">
        <h3><small><em>Cantidad de subtemas: {{ pagination.getTotalItemCount }}</h3></small></em>
    </div>
    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Unidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pagination %}
            <tr>
                <td><a href="{{ path('subtema_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.unidad }}</td>
                <td>
                    <ul class="list-inline">
                        <li>
                            <a href="{{ path('subtema_show', { 'id': entity.id }) }}">
                                <button type="submit" class="btn btn-info btn-xs"> 
                                    <span class="glyphicon glyphicon-eye-open"></span> Ver
                                </button>
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('subtema_edit', { 'id': entity.id }) }}">
                                <button type="submit" class="btn btn-primary btn-xs"> 
                                    <span class="glyphicon glyphicon-wrench"></span> Editar
                                </button>
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="paginacion">
        {{ knp_pagination_render(pagination) }}
    </div>
    <div class="text-right">
        <ul>
            <li>
                <a href="{{ path('subtema_new') }}">
                    <button type="submit" class="btn btn-primary btn-lg"> 
                        <span class="glyphicon glyphicon-plus-sign"></span> Crear subtema
                    </button>
                </a>
            </li>
        </ul>
    </div>
    {% endblock %}
