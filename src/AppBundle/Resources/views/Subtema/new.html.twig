{% extends '::base2.html.twig' %}
{% block title %}Nuevo-Subtema{% endblock %}
{% block body -%}
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
    	<h1><small>NUEVO SUBTEMA</small></h1>

	    {{ form_start(form) }}
	    	<div class="form-group">
		        {{ form_label(form.nombre) }}
		        {{ form_errors(form.nombre) }}
		        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
		    </div>
		    <div class="form-group">
		        {{ form_label(form.unidad) }}
		        {{ form_errors(form.unidad) }}
		        {{ form_widget(form.unidad, { 'attr': {'class': 'form-control'} }) }}
		    </div>
		    
		    <input type="submit" class="btn btn-primary btn-lg" value="Crear" id="crear_subtema" />
		    <button type="button" id="cancelarEvaluacion"  class="btn btn-danger btn-lg"><span class="glyphicon glyphicon-eye-close"></span><a  style='text-decoration:none;color:white;' href="{{ path('admin') }}"> CANCELAR </a></button>
			<div style="display:none">
				{{ form_rest(form) }}
			</div>
	    {{ form_end(form) }}

	<br/><br/>
	<br/><br/>
	<br/><br/>

	</div>
	<div class="col-sm-4"></div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		$(document).ready(function(){
		    $("select").select2();		   
		});
	</script>
{% endblock %}